@model Account
<div class="card card-outline-primary m-1 p-1 bg-warning">
    <div class="bg-faded p-1">
        <h4>
            @Model.AccountName
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Balance.ToString("c")</small>

            </span>
        </h4>
        <h5>@Model.AccountNumber.ToString("D9")</h5>
        <h4>
            <label>
                @Model.Currency
            </label>
        </h4>
    </div>

    

    <form id="@Model.AccountNumber.ToString("D9")" asp-page="/Transfer" method="post">
        <input type="hidden" asp-for="AccountNumber" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Category
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Create Transfer
            </button>
        </span>
    </form>
</div>